<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:layoutDirection">ltr</item>
        <item name="colorPrimary">#CC0000</item>
        <item name="colorPrimaryDark">#990000</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MYheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#CC0000</item>
        <item name="colorPrimaryDark">#990000</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- custom dialog activity theme -->
    <style name="AppTheme.Dialog" parent="Base.Theme.AppCompat.Light.Dialog.FixedSize">
        <!-- removing the dialog's action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


</resources>
